{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "adminPassword": {
            "type": "secureString"
        }
    },
    "variables": {
        "adminUsername": "sqlhauadmin",
        "AD1Name": "LabDC1",
        "AD1NICName": "LabDCNIC",
        "AD1PublicIPAddressName": "LabDCPublicIP",
        "AGN1VMName": "LabAGN1",
        "AGN1VMNICName": "LabAGN1NIC",
        "AGN1VMPublicIPAddressName": "LabAGN1PublicIP",
        "AZRegion": "eastus2",
        "DomainName": "SQLHAU.LAB",
        "networkSecurityGroupName": "LabNSG",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
        "subnetName": "LabSubnet",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', variables('subnetName'))]",
        "virtualNetworkName": "Labnet",
        "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]"
    },
    "resources": [
        {
            "name": "[variables('AD1VMNICName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "location": "[variables('AZRegion')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', variables('AD1VMPublicIPAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAddress": "10.0.6.25",
                            "privateIPAllocationMethod": "Static",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', variables('AD1VMPublicIPAddressName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            },
            "tags": {}
        },
        {
            "name": "[variables('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-08-01",
            "location": "[variables('AZRegion')]",
            "properties": {
                "securityRules": [
                {
                    "name": "RDP",
                    "properties": {
                        "priority": 300,
                        "protocol": "TCP",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "3389"
                    }
                }
            ]
            },
            "tags": {}
        },
        {
            "name": "[variables('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-08-01",
            "location": "[variables('AZRegion')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                "10.0.6.0/24"
            ]
                },
                "dhcpoptions": {
                    "dnsServers": [
                        "10.0.6.25"
                    ]
                },
                "subnets": [
                {
                    "name": "[variables('subnetName')]",
                    "properties": {
                        "addressPrefix": "10.0.6.0/24"
                    }
                }
            ]
            },
            "tags": {}
        },
        {
            "name": "[variables('AD1VMPublicIPAddressName')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2018-08-01",
            "location": "[variables('AZRegion')]",
            "properties": {
                "publicIpAllocationMethod": "Static"
            },
            "sku": {
                "name": "Standard"
            },
            "zones": [
                "1"
            ],
            "tags": {}
        },
        {
            "name": "[variables('AD1VMName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "location": "[variables('AZRegion')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('AD1VMNICName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS2_v3"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "imageReference": {
                        "name": "ad-dc-2019",
                        "publisher": "cloud-infrastructure-services",
                        "product": "ad-dc-2019"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('AD1VMNICName'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[variables('AD1VMName')]",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": false,
                        "provisionVmAgent": true
                    }
                }
            },
            "tags": {},
            "zones": [
                "1"
            ]
        },
        {
            "name": "[variables('AGN1VMName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-06-01",
            "location": "[variables('AZRegion')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('AGN1VMNICName'))]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[variables('AGN1VMName')]",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "Standard_D2s_v3"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftSQLServer",
                        "offer": "SQL2017-WS2016",
                        "sku": "Developer",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "dataDisk": [
                        {
                            "createOption": "empty",
                            "lun": 0,
                            "diskSizeGB": "1023",
                            "caching": "ReadOnly",
                            "managedDisk": {
                                "storageAccountType": "Premium_LRS"
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('AGN1VMNICName'))]"
                        }
                    ]
                }
            },
            "zones": [
                "2"
            ]
        },
        {
            "name": "[variables('AGN1VMName')]",
            "type": "Microsoft.SqlVirtualMachine/SqlVirtualMachines",
            "apiVersion": "2017-03-01-preview",
            "location": "[variables('AZRegion')]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines', variables('AGN1VMName'))]",
                "[concat('Microsoft.Compute/virtualMachines/', variables('AGN1VMName'))]"
            ],
            "properties": {
                "virtualMachineResourceId": "[resourceId('Microsoft.Compute/virtualMachines', variables('AGN1VMName'))]",
                "AutoPatchingSettings": {
                    "Enable": false
                },
                "KeyVaultCredentialSettings": {
                    "Enable": false,
                    "CredentialName": ""
                },
                "ServerConfigurationsManagementSettings": {
                    "SQLConnectivityUpdateSettings": {
                        "ConnectivityType": "PRIVATE",
                        "Port": "1433",
                        "SQLAuthUpdateUserName": "",
                        "SQLAuthUpdatePassword": ""
                    },
                    "SQLWorkloadTypeUpdateSettings": {
                        "SQLWorkloadType": "GENERAL"
                    },
                    "SQLStorageUpdateSettings": {
                        "DiskCount": "1",
                        "DiskConfigurationType": "NEW",
                        "StartingDeviceID": "2"
                    },
                    "AdditionalFeaturesServerConfigurations": {
                        "IsRServicesEnabled": "false"
                    }
                }
            }
        },
        {
            "name": "[variables('AGN1VMNICName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "location": "[variables('AZRegion')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', variables('AGN1VMPublicIPAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "AGN1VMIPConfig",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAddress": "10.0.6.100",
                            "privateIPAllocationMethod": "Static",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', variables('AGN1VMPublicIPAddressName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            },
            "tags": {}
        },
        {
            "name": "[variables('AGN1VMPublicIPAddressName')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2018-08-01",
            "location": "[variables('AZRegion')]",
            "properties": {
                "publicIpAllocationMethod": "Static"
            },
            "sku": {
                "name": "Standard"
            },
            "zones": [
                "2"
            ],
            "tags": {}
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[variables('adminUsername')]"
        }
    }
}